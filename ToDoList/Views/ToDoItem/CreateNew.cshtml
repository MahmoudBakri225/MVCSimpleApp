<h1>Create New</h1>
<h5>ListItem</h5>
<hr />

<div class="custom-form">
    <form asp-controller="ToDoItem" asp-action="SaveNew" method="post">
        <div class="form-group">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" class="form-control" style="width: 500px;" />
        </div>

        <div class="form-group">
            <label for="description">Description:</label>
            <input type="text" id="Description" name="Description" class="form-control" style="width: 500px;" />
        </div>
        <div class="form-group">
            <label for="deadline">Deadline:</label>
            <input type="datetime-local" id="deadline" name="deadline" class="form-control" style="width: 500px;" /><br />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

