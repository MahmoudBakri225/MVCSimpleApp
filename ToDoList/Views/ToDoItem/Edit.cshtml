@model ListItem

<h1>Edit Item</h1>

<form asp-controller="ToDoItem" asp-action="SaveEdit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" class="form-control" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" id="description" name="description" class="form-control" value="@Model.Description" />
    </div>
    <div class="form-group">
        <label for="deadline">Deadline:</label>
        <input type="datetime-local" id="deadline" name="deadline" class="form-control" value="@Model.Deadline.ToString("yyyy-MM-ddTHH:mm")" />
    </div><br />
    <button type="submit" class="btn btn-primary">Save Change</button>
</form>

